{
  "name": "bitchify",
  "version": "1.0.0",
  "description": "Bitchify your panty pants",
  "main": "src/js/bitchify.js",
  "scripts": {
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
	"sass-lint": "sass-lint \"src/scss/**/*.scss\" -v -q",
    "lint": "jshint src/js/*.js",
    "uglify": "uglifyjs dist/js/bitchify.js -m -o dist/js/bitchify.min.js",
    "build": "parallelshell \"npm run build:css\" \"npm run build:js\"",
    "build:css": "npm run sass-lint && npm run scss && npm run autoprefixer",
    "build:js": "npm run lint && babel src/js/bitchify.js -o dist/js/bitchify.js && npm run uglify",
    "watch": "parallelshell \"npm run watch:css\" \"npm run watch:js\"",
    "watch:css": "onchange \"src/scss/**/*.scss\" -- npm run build:css",
    "watch:js": "onchange \"src/js/**/*.js\" -- npm run build:js",
    "postinstall": "npm run build"
  },
  "keywords": [
    "javascript"
  ],
  "author": "Sascha KÃ¼nstler <contact.schascha@gmail.com> (http://www.schaschaweb.de)",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "jshint": "^2.9.4",
    "node-sass": "^3.13.0",
    "onchange": "^3.0.2",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.6.0",
    "sass-lint": "^1.10.2",
    "uglify-js": "^2.7.4"
  }
}
